<?xml version="1.0" encoding="utf-8"?>

<extension
	type="module"
	version="2.5.5"
	method="upgrade"
	client="site">	
    <name>Latest Extensions</name>
    <creationDate>Junio 2018</creationDate>
    <author>Luis Fernando Bonilla Alvarez</author> 
    <authorEmail>fernando@feboal.com</authorEmail>
    <authorUrl>http://feboal.com</authorUrl>
    <copyright>Copyright (C) 2018 feboal. All rights reserved.</copyright>
    <license>GNU GPL</license>
    <version>1.7.0</version>
	<description>Displays the most recently installed extensions.</description>
	<files>
		<filename module="mod_latestextensionsfront">mod_latestextensionsfront.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_latestextensionsfront.ini</language>
		<language tag="nl-NL">language/nl-NL/nl-NL.mod_latestextensionsfront.ini</language>
		<language tag="es-ES">language/es-ES/es-ES.mod_latestextensionsfront.ini</language>
	</languages>	
	<help url="HELP_EXTENSIONS_MODULE_LATESTEXTENSIONS_URL"/>
	<config>
		<fields name="params">
		<fieldset name="basic">
			<field 
				name="count" 
				type="text" 
				default="5" 
				label="MOD_LATESTEXTENSIONS_FIELD_COUNT_LABEL" 
				description="MOD_LATESTEXTENSIONS_FIELD_COUNT_DESC" />
   		</fieldset>
		<fieldset name="advanced">
			<field
				name="moduleclass_sfx"
				type="text"
				label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
   			</fieldset>
		</fields>
	</config>
</extension>